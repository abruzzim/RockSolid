<p><%= @driver.inspect %></p>
<!-- Edit Driver Web Form -->
<!-- driver? PUT /drivers/:id(.:format) drivers#update -->
<form method="post" action="/drivers/<%= @driver.id %>">
  <fieldset>
    <legend><span>Driver Info</span></legend>
    <input type="hidden" name="_method" value="put" />
    <label for="one">Last Name: </label>
    <input id="one" type="text" name="name" value="<%= @driver.name %>" />
    <button type="submit">Update</button>
  </fieldset>
</form>